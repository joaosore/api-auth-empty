{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@containers/*": ["containers/*"],
      "@database/*": ["database/*"],
      "@modules/*": ["modules/*"],
      "@routes/*": ["routes/*"],
      "@shared/*": ["shared/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.json", ".env"],
  "exclude": ["node_modules", "src/logs", "src/tests"]
}
